{
    "compilerOptions": {
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
		"noUnusedLocals": true,
		"sourceMap": true,
        "target": "es3",
        "experimentalDecorators": true
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
		"assets/js/js.ts"
    ]
}