{
	"compilerOptions": {
		"alwaysStrict": true,
		"baseUrl": "./typings/",
		"forceConsistentCasingInFileNames": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"removeComments": true,
		"preserveConstEnums": false,
		"listFiles": false,
		"pretty": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"target": "es6",
		"experimentalDecorators": true,
		"jsx": "react",
		"jsxFactory": "JSX.factory",
		"noUnusedParameters": true,
		"strictPropertyInitialization": true,
		"strictNullChecks": true,
		"strictBindCallApply": true
	},
	"allowJs": true,
	"compileOnSave": true,
	"include": ["app/", "test/", "tasks/html-typings.ts"],
	"exclude": [
		"test/**/*.d.ts",
		"test/programmatic/jsx",
		"test/programmatic/tsx"
	]
}
