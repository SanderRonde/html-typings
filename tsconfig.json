{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./typings/",
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "removeComments": true,
        "preserveConstEnums": false,
        "listFiles": false,
        "pretty": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es5",
        "experimentalDecorators": true
	}, 
    "allowJs": true,
    "compileOnSave": true,
    "include": [
		"app/",
        "test/test.ts",
        "tasks/html-typings.ts"
    ]
}